<Window x:Class="KnowFlow.Windows.MainAppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KnowFlow.Windows"
        mc:Ignorable="d"
        Title="MainAppWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Padding="5">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="3" Opacity="0.2" BlurRadius="5"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="MainPageButton" Width="50" Height="30" Margin="0,0,10,0" Content="Home" Click="MainPageButton_Click"/>
                <Button Name="AddClassButton" Content="+" Width="30" Height="30" Margin="0,0,10,0" Click="AddClassButton_Click"/>
                <Button Name="AccountButton" Width="30" Height="30" Content="{Binding AccountInitial}" Click="AccountButton_Click"/>
            </StackPanel>
        </Border>

        <Frame Grid.Row="1" Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0,10,0,0"/>
    </Grid>
</Window>
